{
  "compilerOptions": {
    "sourceMap": true,
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "noImplicitAny": true, 
    "strict": true,
    "strictFunctionTypes": true,
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dev_server.js"
],
  "compileOnSave": false
}
